@{
    ViewData["Title"] = "Admin Manager";
}


<div class="container-fluid position-relative p-0">
    <div class="container-fluid bg-primary py-5 bg-header" style="margin-bottom: 10px;">
        <div class="row py-5">
            <div class="col-12 pt-lg-5 mt-lg-5 text-center">
                <h1 class="display-4 text-white animated zoomIn">Admin Page</h1>
                <a asp-controller="Home" asp-action="Index" class="h5 text-white">Home</a>
                <i class="far fa-circle text-white px-2"></i>
                <a href="" class="h5 text-white">Admin Manager</a>
            </div>
        </div>
    </div>
</div>

<!-- Service Start -->
<div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="section-title text-center position-relative pb-3 mb-5 mx-auto" style="max-width: 600px;">
            <h5 class="fw-bold text-success text-uppercase">Site Administrator</h5>
            <h1 class="mb-0">Manage Core site Features</h1>
        </div>
        <div class="row g-5">
            <div class="col-lg-4 col-md-6 wow zoomIn" data-wow-delay="0.3s">
                <div class="service-item bg-light rounded d-flex flex-column align-items-center justify-content-center text-center">
                    <div class="service-icon bg-success">
                        <i class="fas fa-images fa-2x text-white"></i>
                    </div>
                    <h4 class="mb-3">Department Manager</h4>
                    <p class="m-0">
                        To manage department click the arrow below.
                    </p>
                    <a class="btn btn-lg btn-success rounded" asp-controller="Department"
                       asp-action="Index">
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 wow zoomIn" data-wow-delay="0.6s">
                <div class="service-item bg-light rounded d-flex flex-column align-items-center justify-content-center text-center">
                    <div class="service-icon bg-success">
                        <i class="fas fa-newspaper fa-2x text-white"></i>
                    </div>
                    <h4 class="mb-3">Course Manager</h4>
                    <p class="m-0">Add, Edit and Delete Course through this module.</p>
                    <a class="btn btn-lg btn-success rounded" asp-controller="CourseManager"
                       asp-action="Index">
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 wow zoomIn" data-wow-delay="0.9s">
                <div class="service-item bg-light rounded d-flex flex-column align-items-center justify-content-center text-center">
                    <div class="service-icon bg-success">
                        <i class="fas fa-users fa-2x text-white"></i>
                    </div>
                    <h4 class="mb-3">Course Allocation</h4>
                    <p class="m-0">
                        Create and manage course allocation here.
                    </p>
                    <a class="btn btn-lg btn-success rounded" asp-controller="CourseAllocation"
                       asp-action="Index">
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 wow zoomIn" data-wow-delay="0.3s">
                <div class="service-item bg-light rounded d-flex flex-column align-items-center justify-content-center text-center">
                    <div class="service-icon bg-success">
                        <i class="fas fa-university fa-2x text-white"></i>
                    </div>
                    <h4 class="mb-3">Lecturer Management</h4>
                    <p class="m-0">
                        Admin can add, Update and Delete lecturer here.
                    </p>
                    <a class="btn btn-lg btn-success rounded" asp-controller="LecturerManager"
                       asp-action="Index">
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>


            
            <div class="col-lg-4 col-md-6 wow zoomIn" data-wow-delay="0.9s">
                <div class="position-relative bg-success rounded h-100 d-flex flex-column align-items-center justify-content-center text-center p-5">
                    <h3 class="text-white mb-3">Super Admin</h3>
                    <p class="text-white mb-3">Role Management</p>
                    <a class="btn btn-lg btn-light rounded" asp-controller="AdminManager"
                       asp-action="Roles">
                        <i class="bi bi-arrow-right text-black"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Service End -->