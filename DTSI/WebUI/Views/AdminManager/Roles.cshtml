@model IEnumerable<WebUI.ViewModels.RoleViewModel>

@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>

    #roles_filter {
        margin-bottom: 20px;
    }
</style>


<div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container py-3 position-relative p-0">
        <div class="section-title text-center position-relative pb-3 mb-5 mx-auto" style="max-width: 600px;">

            <a asp-action="CreateRole" asp-controller="AdminManager" asp-route-Id="" class="btn btn-primary fw-bold px-3 fw-bolder">New Role</a>

        </div>

        <div class="row">
            <div class="wow slideInUp" data-wow-delay="0.3s">
                <div class="table-responsive">
                    <table class="table table-hover" id="roles" style="width:100%">
                        <thead class="bg-success text-light">
                            <tr class="mt-2">
                                <th>S/N</th>
                                <th>Role Name</th>


                                <th>Commands</th>

                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int tot = Model.Count();
                                int i = 1;
                                foreach (var role in Model)
                                {
                                    <tr>
                                        <td>
                                            @if (i <= tot)
                                            {
                                                @i
                                            }
                                        </td>
                                        <td>
                                            @role.RoleName
                                        </td>


                                        <td class="d-flex">
                                            <a class="btn btn-success"
                                       asp-action="CreateRole"
                                       asp-controller="AdminManager"
                                       asp-route-Id="@role.Id"> Edit </a>

                                            <a class="btn btn-danger ms-3"
                                       asp-action="DeleteRole"
                                       asp-controller="AdminManager"
                                       asp-route-Id="@role.Id"> <i class="fa fa-trash"></i> </a>
                                        </td>

                                    </tr>
                                    i++;
                                }
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>





    </div>
</div>


<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />

@section scripts{
    <script>


        $(document).ready(function () {

            $("#roles").DataTable({

            });





        })


    </script>
        }
