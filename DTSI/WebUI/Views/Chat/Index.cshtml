        })

        var AddEdit = function (id) {
            var url = "/Chat/AddEditStudentChat?ID=" + id; //USED TO SEARCH ENTITY WITH ID

            $("#modalBodyStudent").load(url, function () {  // LOAD THE CONTENT FROM THE ACTION /ADDEDITRECORD
                $("#AddEditStudentModal").modal("show");
            })
        }

        var ConfirmDeleteRecord = function (id) {
            $("#ID").val(id);
            $("#DeleteModal").modal("show");
