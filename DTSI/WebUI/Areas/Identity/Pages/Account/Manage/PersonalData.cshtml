@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="row justify-content-center">
    <div class="col-12">
        <div class="card login-logout-card">
            <div class="card-header">
                <h3 class="card-title text-primary">
                    @ViewData["Title"]
                </h3>
            </div>
            <div class="card-body">
                <div class="row justify-content-center">
                    <div class="col-md-12">
                        <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
                        <p>
                            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
                        </p>
                        <form id="download-data" asp-page="DownloadPersonalData" method="post">
                            <button class="btn btn-primary my-2" type="submit">Download</button>
                        </form>
                        <p>
                            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger my-2">Delete</a>
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
